<%# This is the button for the current location, it gets the current location onclick --%>
<%= form_for @user do |f| %>
	<%= f.hidden_field :latitude %>
	<%= f.hidden_field :longitude %>

<div class="container">
	<div class="row center banner_text">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><h1>Welcome <%= @user.fname %>!
		</h1>
		</div>
	</div>
</div>

<div class="container container1">
	<div class="row center">
		<div id="map" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 truck_text">
		</div>
		<%= f.submit "Get your location!", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

<div id="current">
	<div id="cLat"></div>
	<div id="cLong"></div>
</div>

<div class="container">
	<div class="row center banner_text">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h2>Available Truck: </h2>
		<%#  This is itereating through each truck and current user to determine whether user is in range of truck %>
		<% @trucks.each do |truck| %>
			<% if Geocoder::Calculations.distance_between([@user.latitude,@user.longitude], [truck.latitude, truck.longitude]) < 1 %>
				<h1><%= link_to "#{truck.name}" , truck_path(truck.id) %></h1>
		
			<% end %>
		<%	end	%>
		</div>
		
	</div>
</div>


